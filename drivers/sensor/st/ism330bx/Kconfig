# ST Microelectronics ISM330BX 6-axis IMU sensor driver

# Copyright (c) 2023 STMicroelectronics
# SPDX-License-Identifier: Apache-2.0

menuconfig ISM330BX
	bool "ISM330BX I2C/SPI accelerometer and gyroscope Chip"
	default y
	depends on DT_HAS_ST_ISM330BX_ENABLED
	depends on ZEPHYR_HAL_ST_MODULE
	# depends on PM_DEVICE //TODO: Do I want to have PM for this driver? or is it the user responsibility?
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_ST_ISM330BX),i2c)
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_ST_ISM330BX),spi)
	select HAS_STMEMSC
	select USE_STDC_ISM330BX
	help
	  Enable driver for ISM330BX accelerometer and gyroscope
	  sensor.

if ISM330BX

choice ISM330BX_TRIGGER_MODE
	prompt "Trigger mode"
	help
	  Specify the type of triggering to be used by the driver.

config ISM330BX_TRIGGER_NONE
	bool "No trigger"

config ISM330BX_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ISM330BX_TRIGGER

config ISM330BX_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ISM330BX_TRIGGER

endchoice

config ISM330BX_TRIGGER
	bool

if ISM330BX_TRIGGER

config ISM330BX_THREAD_PRIORITY
	int "Thread priority"
	depends on ISM330BX_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ISM330BX_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ISM330BX_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ISM330BX_TRIGGER

config ISM330BX_ENABLE_TEMP
	bool "Temperature"
	help
	  Enable/disable temperature

config ISM330BX_SENSORHUB
	bool "I2C sensorhub feature"
	help
	  Enable/disable internal sensorhub. You can enable
	  a maximum of two external sensors (if more than two are enabled
	  the system would enumerate only the first two found)

if ISM330BX_SENSORHUB

config ISM330BX_EXT_LIS2MDL
	bool "LIS2MDL as external sensor"
	default y

config ISM330BX_EXT_LPS22HH
	bool "LPS22HH as external sensor"

config ISM330BX_EXT_HTS221
	bool "HTS221 as external sensor"

config ISM330BX_EXT_LPS22HB
	bool "LPS22HB as external sensor"

config ISM330BX_EXT_LPS22DF
	bool "LPS22DF as external sensor"
	default y

endif # ISM330BX_SENSORHUB

endif # ISM330BX

